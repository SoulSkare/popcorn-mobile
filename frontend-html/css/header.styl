.header-container
    background-color #17181b
    /* color overlay */
    width 100%
    height 100px
    -webkit-box-shadow 0px 6px 8px -4px rgba(0, 0, 0, .9)

    .popcorn-logo
        position relative
        background-repeat no-repeat
        float left
        margin-left 41px
        margin-top 35px
        width 182px
        height 42px
        background-image url('../assets/LOGO.png')

    .popcorn-menu-icon
        position relative
        margin-right 27px
        margin-top 27px
        width 56px
        height 48px
        float right
        background-repeat no-repeat
        cursor pointer
        background-image url('../assets/MENU%20ICON.png')

    .popcorn-search-icon
        position relative
        margin-right 91px
        margin-top 27px
        width 50px
        background-repeat no-repeat
        height 49px
        float right
        cursor pointer
        background-image url('../assets/SEARCH%20ICON.png')