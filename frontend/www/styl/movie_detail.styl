#player .app-overlay
  z-index 20
  
.movie-detail-view
  position absolute
  z-index 2
  width 100%
  height 100%
  background-color #121314
  margin-top 7%

.tooltip-inner
  max-width 200px
  padding 3px 8px
  color #fff
  text-align center
  text-decoration none
  background-color rgba(9, 13, 18, 0.75)
  border-radius 4px


.movie-backdrop
  position relative
  width 100%
  height 40%
  min-height 206px
  background-repeat no-repeat
  background-position center
  background-size cover
  -webkit-backface-visibility hidden





.movie-meta-backround
  height 25%
  width 100%
  min-height 64px
  bottom 0
  position absolute
  padding-left 2%
  background rgba(0, 0, 0, 0.6)

.movie-meta-title
  margin-top 1%
  color #fff
  font-family 'Open Sans Semibold'
  -webkit-font-smoothing antialiased
  font-size 28px
  position relative
  cursor default
  z-index 3
  max-width 75%
  opacity 1
  -webkit-backface-visibility hidden
  text-shadow 0 0 5px #000
  text-overflow ellipsis
  white-space nowrap
  overflow hidden

.movie-details-container
  margin-top 1%
  height 15%

.movie-meta-details
  opacity 1
  position relative
  float left
  color #fff
  font-family 'Open Sans Bold'
  -webkit-font-smoothing antialiased
  font-size 11px
  cursor default
  z-index 2
  -webkit-backface-visibility hidden

.movie-meta-dot
  top 5px
  margin-left 15px
  margin-right 15px
  position relative
  float left
  width 3px
  height 3px
  border-radius 2px
  background-clip padding-box
  background-color #dbdbdd
  cursor default
  z-index 2
  -webkit-backface-visibility hidden

.movie-btn-watch
  top 35%
  position relative
  z-index 3
  margin auto
  cursor pointer
  width 60px
  height 60px
  border-radius 50px
  background-clip padding-box
  background-color #1f375f
  padding 3px 0 0 18px
  transition background-color 0.5s
  opacity 0.9
  .play-icon
    width 0
    height 0
    margin-top 13px
    margin-left 10px
    margin-right auto
    border-top 15px solid transparent
    border-left 30px solid #fff
    border-bottom 15px solid transparent
  &:hover
    background #225694
  &:active
    box-shadow inset 0 -1px 4px rgba(0,0,0,0.6)
    background #2875e5
    border solid 1px #2468cc

.star-container
  position relative
  float left
  height 16px
  z-index 2


.movie-meta-overview
  position absolute
  margin-left 2%
  margin-right 2%
  margin-top 10px
  color #fff
  font-family 'Open Sans Semibold'
  -webkit-font-smoothing antialiased
  font-size 14px
  line-height 22px
  opacity 1
  height 40%
  -webkit-backface-visibility hidden
  overflow auto
  overflow-x hidden
  overflow-y overlay

.health-icon
  z-index 2
  margin-right 6%
  position relative
  float right
  width 14px
  height 19px
  opacity 1
  -webkit-backface-visibility hidden
  &.Bad
    background-image url('../images/icons/HealthBad.png')
  &.Medium
    background-image url('../images/icons/HealthMedium.png')
  &.Good
    background-image url('../images/icons/HealthGood.png')
  &.Excellent
    background-image url('../images/icons/HealthExcellent.png')


.rating-star
  z-index 2
  float right
  margin-right 5px
  position relative
  width 11px
  height 11px
  opacity 1
  background-repeat no-repeat
  -webkit-backface-visibility hidden
  &.null
    background-image url('../images/icons/StarGray.png')
  &.half
    background-image url('../images/icons/StarHalf.png')
  &.full
    background-image url('../images/icons/star.png')