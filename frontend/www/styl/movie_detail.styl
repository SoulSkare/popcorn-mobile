    -webkit-background-clip padding-box
    background-clip padding-box
    background-color #dbdbdd
    cursor default
    z-index 2
    opacity 1
    -webkit-backface-visibility hidden

.movie-cover-image
  position absolute
  width 15%
  -webkit-border-radius 4px
  border-radius 4px
  top 20px
  margin-left 7.1%
  z-index 4
  opacity 1
  -webkit-backface-visibility hidden
  display none

.movie-overview-container
  top: 22%
  z-index: 2
  width: 92%

.movie-meta-overview
  position absolute
  margin-left 3%
  margin-top 45px
  color #fff
  font-family 'Open Sans Semibold'
  -webkit-font-smoothing: antialiased
  font-size 14px
  line-height 22px
  //width 60%
  //max-width 60%
  //height 55%
  z-index 2
  opacity 1
  height 40%
  -webkit-backface-visibility hidden
  overflow auto
  scrollable()

.movie-detail-close
	top 15px
	right 15px
	position absolute
	float right
	width 20px
	height 20px
	background-image url('../images/icons/Close.png')
	background-size 20px
	cursor pointer
	z-index 100
	opacity 0.7
	-webkit-backface-visibility hidden
	transition all .5s
	&:hover
      opacity 1 
      transition all .5s

.movie-meta-title
    margin-top 38%
    margin-left 3%
    color #fff
    font-family: 'Open Sans Semibold'
    -webkit-font-smoothing: antialiased;
    font-size 28px
    position relative
    cursor default
    z-index 3
    max-width 95%
    opacity 1
    -webkit-backface-visibility hidden
    text-shadow 0 0 5px #000
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

.health-icon
    z-index 2
    margin-right 6%
    margin-top 18px
    position relative
    float right
    width 12px
    height 17px
    opacity 1
    -webkit-backface-visibility hidden
    &.Bad
      background-image url('../images/icons/HealthBad.png')
    &.Medium
      background-image url('../images/icons/HealthMedium.png')
    &.Good
      background-image url('../images/icons/HealthGood.png')
    &.Excellent
      background-image url('../images/icons/HealthExcellent.png')
.rating-star
    z-index 2
    padding-right: 12px
    position relative
    display: inline-block
    width 11px
    height 11px
    opacity 1
    background-repeat no-repeat
    -webkit-backface-visibility hidden
    &.null
      background-image url('../images/icons/StarGray.png')
    &.half
      background-image url('../images/icons/StarHalf.png')
    &.full
      background-image url('../images/icons/star.png')

.movie-quality-container
  z-index 2
  width: 80px
  height: 12px

.movie-controlls-container
  margin-left: 3%
  margin-top: 10%
  z-index: 3
  width: 90%
  height: 10px
  position: relative

.movie-btn-watch
    z-index 3
    //left 29%
    //top 72%
    margin auto
    cursor pointer
    width 60px
    height 60px
    -webkit-border-radius 50px
    border-radius 50px
    -webkit-background-clip padding-box
    background-clip padding-box
    background-color #1F375F
    padding 3px 0 0 18px
    transition background-color .5s
    opacity 0.9
    &:hover
      background #225694
      text-decoration none
      opacity 1

    &:active
      box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6)
      background: #2875e5
      border: solid 1px #2468cc

    .movie-watch-now
      color #fff
      font-family "Open Sans Semibold", "Open Sans", sans-serif
      -webkit-font-smoothing antialiased
      text-align center
      padding-top 12px
      font-size 12px

      .play-button
        width 0
        height 0
        border-top 15px solid transparent
        border-left 30px solid white
        border-bottom 15px solid transparent

.movie-btn-watch-trailer
    z-index 2
    margin-left 15px
    //top 300px
    position relative
    cursor pointer
    float left
    height 35px
    -moz-border-radius 3px
    -webkit-border-radius 3px
    border-radius 3px
    -moz-background-clip padding
    -webkit-background-clip padding-box
    background-clip padding-box
    background-color #1F375F
    padding 0 15px
    transition background-color .5s
    &:hover
      background #225694
      text-decoration none

    &:active
      box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6)
      background: #2875e5
      border: solid 1px #2468cc

    .movie-watch-now
      color #fff
      font-family "Open Sans Semibold", "Open Sans", sans-serif
      -webkit-font-smoothing antialiased
      text-align center
      padding-top 12px
      font-size 12px

.movie-backdrop
    width 100%
    height 40%
    position absolute
    top 0px
    z-index 3
    background-repeat no-repeat
    background-position center
    background-size cover
    overflow hidden
    opacity 1
    -webkit-backface-visibility hidden
    display none

.movie-backdrop-overlay
    width 100%
    height 100%
    position absolute
    top 0px
    background-color #121314
    /* layer fill content */
    z-index: 2

@media screen and (max-width: 700px) and (orientation:landscape)
    .movie-controlls-container
      margin-left: 3%

    .movie-detail
      top 16%

    .movie-btn-watch
      margin-top -40px

    .sperator-movie
      height 70px
      top 22%

    .movie-meta-title
      margin-top 9%
      font-size 30px

    .movie-overview-container
      margin-top 0

@media screen and (min-width: 600px) and (orientation:portrait)
    /* Styles for Tablet screen */
    .movie-detail
      top 8%

    .sperator-movie
      height 100px
      top 32.2%

    .movie-meta-title
      margin-top 41%
      font-size 40px

    .movie-quick-info
      margin-top 0

    .movie-meta-details
      font-size 13px

    .movie-cover-image
      display block
      width 25%

    .movie-overview-container
      margin-top 2%

    .movie-meta-overview
      margin-top 60px
      font-size 17px

@media all and (min-width: 700px) and (orientation:landscape)
    /* Styles for Landscape screen */
    .movie-detail
      top 12%

    .movie-meta-title
      margin-top 8%
      margin-left 25%
      font-size 40px

    .sperator-movie
      height 100px
      top 27.5%

    .movie-quick-info
      margin-top -7px
      margin-left 25%
      width 75%

    .movie-overview-container
      margin-top 0

    .movie-meta-overview
      margin-top 60px
      font-size 17px

    .movie-cover-image
      display block

