#player .app-overlay
  z-index 20
  
.app-overlay
  position absolute
  z-index 2
  width 100%
  height 100%
  background-color rgba(9, 13, 18, 0.75)

.tooltip-inner
  max-width 200px
  padding 3px 8px
  color #fff
  text-align center
  text-decoration none
  background-color rgba(9, 13, 18, 0.75)
  border-radius 4px

.cover-detail-overlay
  position absolute
  width 23%
  border-radius 4px
  float left
  margin-right 20px
  margin-left 7.1%
  z-index 5
  opacity 0
  background rgba(23, 24, 27, 0.6)
  transition opacity .25s ease
  -webkit-backface-visibility hidden

  &:hover
    opacity: 1
    
.cover-detail-favorites
  height: 20px
  width: 25px
  float: right
  background-repeat: no-repeat
  background-position: center
  margin-top: 10px
  margin-right: 7px
  -webkit-transition: background-image 0.2s ease-in-out
  background-image: url(../../images/icons/AddToFavorites.png)

  &:hover
