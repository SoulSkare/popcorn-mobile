    width 100%
    height 100%
    position fixed
    -webkit-user-select none
    opacity 1
    overflow hidden
    margin auto
    left 0
    right 0
    top 50px
    //max-width 940px
    //max-height 430px
    -webkit-backface-visibility hidden

.star-container
  position: relative
  opacity 1
  float left
  margin-top: 18px
  width: 80px
  height: 16px
  z-index: 2


.sperator-movie
    height 70px
    width 100%
    position absolute
    z-index 3
    top 29%
    background rgba(0, 0, 0, 0.6)

    .detail-window
      opacity 1

.movie-quick-info
  margin-top -8px
  color #FFF
  margin-left 3%
  z-index 4
  position absolute
  width 95%

  .movie-meta-details
    opacity 1
    margin-left 4px
    margin-top 20px
    position relative
    float left
    color #fff
    font-family: 'Open Sans Bold'
    -webkit-font-smoothing: antialiased
    font-size 11px
    cursor default
    z-index 2
    -webkit-backface-visibility hidden

