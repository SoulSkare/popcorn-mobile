.settings-container
	color #fff
	padding 30px 30px 30px 40px
	*
		font-family 'Open Sans', sans-serif
		margin 0
		padding 0
		-webkit-font-smoothing antialiased
	h2
		font-size 32px
		font-weight 100

.content
	& > div
		overflow auto
	h3
		border-top 1px solid #666
		color #2d75df
		font 100 24px "Open Sans", sans-serif
		margin-top 30px
		padding 20px 0 10px 0
		text-align right
	label
		color #c3c5c7
		cursor pointer
		display block
		font-size 15px
		margin 9px 0 5px
	.label
		background-image url('../assets/checkbox.png')
		background-repeat no-repeat
		background-position 0 0
		color #c3c5c7
		cursor pointer
		display inline-block
		font-size 15px
		height 15px
		line-height 15px
		padding-left 20px
		vertical-align middle
	input[type="text"]
		background #393b3d
		border 0px solid #393b3d
		border-radius 5px
		color #c3c5c7
		cursor text
		font 15px/25px "Open Sans", sans-serif
		height 29px
		outline 0
		padding-left 2%
		width 98%
	input[type=checkbox]
		border 0
		clip rect(0 0 0 0)
		height 1px
		margin -1px
		overflow hidden
		padding 0
		position absolute
		width 1px
	.checked
		background-position 0 -15px
	.btns
		margin-top 45px
		overflow auto
		width 100%
	button
		transition background-color .5s
		background #2d75df
		border none
		border-radius 3px
		color #c3c5c7
		cursor pointer
		float left
		font 13px/28px "Open Sans", sans-serif
		height 29px
		margin 1% 2.5%
		padding 0 10px
		width 45%
		&:hover
			background #4d96ff
			text-decoration none
		&:disabled
			background #393b3d
	.mob
		overflow auto
	.mob-5
		float left
		width 48%
	.mob-right
		float right
	select
		background #393b3d
		border 0 !important
		cursor pointer
		color #c3c5c7
		font-family "Open Sans", sans-serif
		font-size 13px
		height 30px
		line-height 15px
		outline 0
		padding-left 1.5%
		position relative
		width 100%
	option
		background #393b3d
		border 0 !important
		outline 0
	.dropdown-arrow
		border-left 4px solid transparent
		border-right 4px solid transparent
		border-top 5px solid #c4c6c8
		cursor pointer
		float left
		height 0
		margin-left -13px
		position relative
		top 13px
		width 0
		display none
	.label-cache
		margin-top 20px
	.fake-cache
		margin-bottom 20px
	.success-alert
		color #fff
		font 16px "Open Sans Semibold", sans-serif
		position fixed
		right 50px
		top 75px

.advanced-settings
	position relative

.fake-cache
	height auto
	width auto

.cache-directory
	bottom 50px
	cursor pointer
	height 27px
	left 0
	opacity 0
	position absolute
	width 100%

