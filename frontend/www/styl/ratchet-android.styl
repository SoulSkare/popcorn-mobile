.bar
  background #17181b
  border-bottom #266fdc
  box-shadow 0px -2px 0px #222222 inset, 0px 3px 3px rgba(0, 0, 0, 0.07)
  h1
    color #ffffff

header
  .icon
    padding-left 10px
    padding-right 10px

a
  &:hover
    text-decoration none


.segmented-control 
  display none
  position fixed
  z-index 10
  .control-item
    background #232323
    color #666666
    border-left 1px solid #444444
    &.active
      background-color #232323
      border-bottom 1px solid #266fdc
      color #ffffff
      font-weight 500

.popcorn-title
  left 64px
  position absolute
  float left
  display block
  width 100%
  padding 0
  font-size 17px
  font-weight 500
  line-height 52px
  color #000
  white-space nowrap

.header-logo
  position relative
  height 100%
  //left -17px
  float left
  padding-top 10px
  padding-bottom 10px

