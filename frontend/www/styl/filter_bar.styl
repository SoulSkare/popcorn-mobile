.filter-bar
    z-index 10
    width 100%
    height 100%
   

.filter-bar-region
    height: 7%
    position: absolute
    width: 100%


.popcorn-logo
    position relative
    float left
    width 186px
    height 42px
    max-width: 300px;
    margin-top: 8%
    margin-left: 4%;
    background-image url("../images/LOGO.png")
    background-repeat: no-repeat


.popcorn-menu-icon
    position relative
    width 17%
    float right
    width: 8%
    margin-right: 2%
    margin-top: 2%
    cursor pointer


.popcorn-search-icon
    position relative
    margin-top 28px
    width 50px
    background-repeat no-repeat
    height 50px
    float right
    cursor pointer
    background-image url("../images/SEARCHICON.png")
    background-size 60%
    background-position 50% 40%

@media all and (min-width: 700px)
    /* Styles for Tablet screen */
    .filter-bar
        height 18%
