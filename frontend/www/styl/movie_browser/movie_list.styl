.movie-browser
    height 100%
    width 100%

.movie-list-region
    height 100%
    width 100%
    
.movie-list
    height 100%
    width 100%
    fixed top left
    text-align center

    scrollable()

    &::-webkit-scrollbar-track
        margin-top 7%

    .movies
        //padding-top 13%
        -webkit-user-select none
        text-align left
        width 100%
        height 100%
        display inline-block

    .error
        font-size 1.5em
        text-align center
        margin-top 180px
        color #727272
        font-weight bold

    > .spinner
        position absolute
        width 100%
        height 100%
        background rgba(0, 0, 0, 0.5) center center no-repeat
        

        .loading-container
            margin 180px auto 0px
            opacity .8

@media all and (min-width: 300px) and (max-width: 700px) and (orientation:landscape)
    /* Styles for Landscape screen */
    .movie-list
        .movies
            padding-top 60px