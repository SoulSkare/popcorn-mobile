.movie-item
    position: relative
    width: 100%
    height: 18%
    border-bottom: 1px solid rgba(0, 0, 0, .9)

.title
    color: #fff
    font-family: 'Roboto', sans-serif
    font-size: 150%
    font-weight: 400
    margin-left: 5%
    position: absolute
    margin-top: 6%
    width: 60%
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis


.year
	font-size: 110%
	color #5b5b5b
	margin-left: 5%
	margin-top: 16%
	position: absolute


.seasons
	font-size 0.85em
	color #5b5b5b
	display inline
	float right

.popcorn-movie-open-icon
  position relative
  float right
  margin-right 37px
  margin-top 6%

.popcorn-movie-seperator
  width 1px
  height 80%
  float right
  margin-top 15px
  position relative
  margin-right 30px
  background-color #000




