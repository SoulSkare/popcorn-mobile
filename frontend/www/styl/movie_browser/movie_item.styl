.movie-item
  display inline-block
  margin 5px
  float left
  font-size 0.8em
  border-radius 5px
  background-clip padding-box
  //background-color #23252b

.movie-item-cover
  background-image url("../images/posterholder.png")
  background-size 150px 225px
  width 150px
  height 225px
  border-radius 4px
  cursor pointer
  box-shadow 0 4px 11px rgba(0, 0, 0, .2), inset 0 3px 0 rgba(255, 255, 255, .12)
  transition opacity 0.5s ease

.movie-item-meta-title
  height 22px
  margin-top 6px
  margin-left 10px
  color #fff
  max-width 134px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  font-family 'Roboto', sans-serif
  font-weight 400
  font-size 19px

.movie-item-meta-year
  opacity 0.3
  height 22px
  margin-left 10px
  margin-bottom 3px
  color #fff
  max-width 134px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  font-family 'Roboto', sans-serif
  font-weight 400
  font-size 14px


.load-more
	background-size 134px 196px
	width 134px
	height 196px
	border-radius 4px
	box-shadow 0px 0px 10px
	cursor pointer
	display inline-block
	margin 10px
	float left
	background-color #141c25
	-webkit-transition background-color 200ms linear;

	> .loading-container
		display none
		margin-top 70px
		margin-left 40px

	.status-loadmore
		position absolute;
		color #c3c5c7;
		margin-top 80px;
		margin-left 10px;
		padding-left 15px;
		padding-right 15px;
		background-color #173b5b;
		-webkit-box-shadow 0px 0px 10px #000;
		padding-bottom 10px;
		padding-top 10px;
		border-radius 2px;
		font-family "Open Sans Semibold", sans-serif;
		-webkit-transition background-color 200ms linear;
		max-width 113px
		text-align center

		&:hover
			background-color:#1b4365

