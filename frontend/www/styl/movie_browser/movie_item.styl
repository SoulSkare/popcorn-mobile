.key-nav .movie-item.selected .cover .cover-overlay
	border 2px solid #2d75df
	opacity 1

.load-more
	background-size 134px 196px
	width 134px
	height 196px
	border-radius 4px
	box-shadow 0px 0px 10px
	cursor pointer
	display inline-block
	margin 10px
	float left
	background-color #141c25
	-webkit-transition background-color 200ms linear;

	> .loading-container
		display none
		margin-top 70px
		margin-left 40px

	.status-loadmore
		position absolute;
		color #c3c5c7;
		margin-top 80px;
		margin-left 10px;
		padding-left 15px;
		padding-right 15px;
		background-color #173b5b;
		-webkit-box-shadow 0px 0px 10px #000;
		padding-bottom 10px;
		padding-top 10px;
		border-radius 2px;
		font-family "Open Sans Semibold", sans-serif;
		-webkit-transition background-color 200ms linear;
		max-width 113px
		text-align center

		&:hover
			background-color:#1b4365
